
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.rowIndex="0" minWidth="1200" minHeight="600">
        <columns>
            <TableColumn fx:id="fileColumn" text="File"></TableColumn>
            <TableColumn fx:id="actualClassColumn" text="Actual Class"></TableColumn>
            <TableColumn fx:id="spamProbColumn" text="Spam Probability"></TableColumn>
        </columns>
    </TableView>

    <Label fx:id="accuracy" text="Accuracy:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="accuracyNum" text="" GridPane.columnIndex="0" GridPane.rowIndex="2" maxWidth = "200"/>
    <Label fx:id="precision" text="Precision:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="precisionNum" text="" GridPane.columnIndex="0" GridPane.rowIndex="4" maxWidth="200"/>


</GridPane>